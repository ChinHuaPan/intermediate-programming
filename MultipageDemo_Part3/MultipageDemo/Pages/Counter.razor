@page "/counter"
@inject Services.AppData AppData

<h1>Counter</h1>

<div style="background-color:@AppData.Color">
    <p>Current count: @AppData.currentCount</p>
</div>

<button class="btn btn-primary" @onclick=IncrementCounter>Click me</button>

<MyFirstComponent @bind-CurrentCounterValue=AppData.currentCount />
<MySecondComponent CurrentCounterValue=@AppData.currentCount />

@code {
    private void IncrementCounter()
    {
        AppData.currentCount++;
    }
}

